<form action="/create" method="post">
  <label for="filename">Document name:</label><br>
  <input name="filename" id="filename" value="<%= @filename %>"/>
  <div>
    <label for="content">Document contents:</label><br>
    <textarea name="content" id="content" rows="20" cols="100"><%= @content %></textarea>
  </div>
  <button type="submit">Create</button>
  <a href="/">Cancel</a>
</form>
